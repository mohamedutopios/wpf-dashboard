<Page x:Class="AdminDashboard.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Bienvenue sur le Dashboard Admin" 
                       FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <WrapPanel>
                <!-- Carte 1 : Total Utilisateurs -->
                <Border BorderBrush="Gray" BorderThickness="1" 
                        Width="200" Height="100" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Total Utilisateurs" FontWeight="Bold"/>
                        <TextBlock Text="150" FontSize="20" Foreground="#3498db"/>
                    </StackPanel>
                </Border>
                <!-- Carte 2 : Nouveaux Inscrits -->
                <Border BorderBrush="Gray" BorderThickness="1" 
                        Width="200" Height="100" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Nouveaux Inscrits" FontWeight="Bold"/>
                        <TextBlock Text="10" FontSize="20" Foreground="#e74c3c"/>
                    </StackPanel>
                </Border>
                <!-- Carte 3 : Activités -->
                <Border BorderBrush="Gray" BorderThickness="1" 
                        Width="200" Height="100" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Activités" FontWeight="Bold"/>
                        <TextBlock Text="75" FontSize="20" Foreground="#f1c40f"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
